{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/suite",

  "definitions": {
    "suite": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Test"
          }
        }
      },
      "required": [
        "endpoint",
        "tests"
      ],
      "title": "suite"
    },
    "Test": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "only": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "headers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Header"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Action"
          }
        },
        "responseActions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ResponseAction"
          }
        }
      },
      "required": [
        "name",
        "categories",
        "headers",
        "actions",
        "responseActions"
      ],
      "title": "Test"
    },
    "Header": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "title": "Header"
    },
    "Action": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "methodName": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "body": {
          "type": ["string", "null"]
        },
        "params": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/definitions/Param"
          }
        }
      },
      "required": [
        "methodName",
        "url"
      ],
      "title": "Action"
    },
    "ResponseAction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "method": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "string"
        }
      },
      "required": [
        "method"
      ],
      "title": "ResponseAction"
    },
    "Param": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "title": "Param"
    }
  }
}
